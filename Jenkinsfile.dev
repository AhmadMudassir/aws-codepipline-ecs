pipeline {
  agent { label 'node1' }

  stages {
    stage('Install Dependencies') {
      steps {
        sh '''
          ls -a
          npm i express
        '''
      }
    }
    stage('Test App') {
      steps {
        sh 'node -c index.js'
      }
    }
    stage('PM2') {
      steps {
        sh '''
            pm2 start index.js --name node-app
            pm2 save
        '''
      }
    }
  }
}
